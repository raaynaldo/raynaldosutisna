{
    "moduleResolution": "node",
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "*"
            ],
            "@/components/*": [
                "components/*"
            ],
            "@/data/*": [
                "data/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
        },
    },
    "exclude": [
        "node_modules",
        ".next"
    ]
}